<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/podcastImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="Podcast Image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/podcastTitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Podcast title"
        android:textStyle="bold"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/podcastImage"
        app:layout_constraintEnd_toStartOf="@id/playBtn"
        app:layout_constraintTop_toTopOf="@id/podcastImage"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>

    <TextView
        android:id="@+id/podcastAuthorText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textSize="13sp"
        android:alpha="0.75"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/podcastTitleText"
        app:layout_constraintEnd_toStartOf="@id/playBtn"
        app:layout_constraintTop_toBottomOf="@id/podcastTitleText"
        android:layout_marginTop="4dp"/>

    <!-- âœ… NEW: Play button -->
    <ImageButton
        android:id="@+id/playBtn"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:contentDescription="Play latest episode"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_media_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
